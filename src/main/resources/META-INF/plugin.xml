<idea-plugin>
    <id>com.github.halvra.opencell</id>
    <name>Opencell</name>
    <vendor>Halvra</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceImplementation="com.github.halvra.opencell.settings.ProjectSettingsState"/>
        <projectService serviceImplementation="com.github.halvra.opencell.services.ProjectService"/>
        <projectConfigurable parentId="tools" instance="com.github.halvra.opencell.settings.ProjectSettingsConfigurable"
                             id="OpencellSettings"
                             displayName="Opencell Plugin"/>
        <fileDocumentManagerListener implementation="com.github.halvra.opencell.listeners.UploadToEnvironmentListener"/>
        <notificationGroup id="Opencell Notification Group" displayType="BALLOON"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.halvra.opencell.listeners.ProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
    <actions>
        <action id="com.github.halvra.opencell.actions.EscapeAndCopyAction"
                class="com.github.halvra.opencell.actions.EscapeAndCopyAction" text="Escape and Copy"
                description="Escape this file and copy it to clipboard"
                icon="Icons.OPENCELL">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="after" relative-to-action="CutCopyPasteGroup"/>
        </action>

        <group id="ToolbarOpencellGroup">
            <separator/>
            <action id="com.github.halvra.opencell.actions.DeployEnvironmentComboBoxAction"
                    class="com.github.halvra.opencell.actions.DeployEnvironmentComboBoxAction"
                    text="Select Opencell Environment"
                    description="Select an Opencell environment">
            </action>
            <action id="com.github.halvra.opencell.actions.AutoDeployAction"
                    class="com.github.halvra.opencell.actions.AutoDeployAction"
                    text="Auto Deploy"
                    description="Auto deploy to selected Opencell environment">
            </action>
            <add-to-group group-id="ToolbarRunGroup" anchor="last"/>
        </group>
    </actions>
</idea-plugin>
